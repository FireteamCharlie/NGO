<section id="newProject">
	<form action="/organisation/<%= @organisation_id %>/projectAdd" method="post">
		<p>Project Name:</p>
		<input type="text" name="project_name"><br>
		<p>Sector:</p>
		<select name="sector">
			<option value="Agriculture">Agriculture</option>
			<option value="Economic Development">Economic Development</option>
			<option value="Education">Education</option>
			<option value="Environment & Natural Resources">Environment & Natural Resources</option>
			<option value="Finance & Financial Reform">Finance & Financial Reform</option>
			<option value="Governance">Governance</option>
			<option value="Health">Health</option>
			<option value="Rural Development">Rural Development</option>
			<option value="Social Development">Social Development</option>
			<option value="Tourism">Tourism</option>
			<option value="Other">Other</option>
		</select>
		<p>Country:</p>
		<input type="text" name="country"><br>
		<p>Description:</p>
		<input type="text" name="description">
		<p>Funding Goal:</p>
		<input type="number" name="funding_goal">
		<p>Funding Date:</p>
		<input type="date" name="funding_date">
		<p>Project Image: <input type="file" name="image" /></p>
		<input type="submit" value="Create Project!">
	</form>
</section>