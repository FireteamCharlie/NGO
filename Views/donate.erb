<section id="donation">

    <div>
    	<form class="form-horizontal" role="form" action="/project/<%= @project.project_id %>/donate" method="post">
    		<p>Hi <%= username %>,</p>
  			<p>Please enter the amount you wish to donate below.</p>
		  <div class="form-group">
		    <label for="inputcreditcard" class="col-sm-2 control-label">Credit Card Number</label>
		    <div class="col-sm-10">
		      <input type="text" class="form-control" name="inputcreditcard" placeholder="Credit Card Number">
		    </div>
		  </div>
		  <div class="form-group">
		    <label for="inputexpiry" class="col-sm-2 control-label">Expiry Date</label>
		    <div class="col-sm-10">
		      <input type="password" class="form-control" name="inputexpiry" placeholder="Expiry Date">
		    </div>
		  </div>
		  <div class="form-group">
		    <label for="inputccv" class="col-sm-2 control-label">CCV</label>
		    <div class="col-sm-10">
		      <input type="password" class="form-control" name="inputccv" placeholder="CCV">
		    </div>
		  </div>
		  <div class="form-group">
		    <label for="amount" class="col-sm-2 control-label">Amount</label>
		    <div class="col-sm-10">
		      <input type="text" class="form-control" name="amount" placeholder="Amount">
		    </div>
		  </div>
		  <div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		      <button type="submit" class="btn btn-default">Make Donation</button>
		    </div>
		  </div>
		</form>
    	
  </form>
</section>