<% if @project %>  
  <form action="/<%= @project.project_id %>" method="post" id="edit">  
    <input type="hidden" name="_method" value="put">   
  		<h1><%= @project.project_name %></h1>
  		<!-- add params: values for the edited content -->
  		<h2>General Details</h2>
  		<p>Project Name:</p>
  		<input type="text" name="project_name" value="<%= @project.project_name %>"><br>
  		<p>Sector:</p>
  		<select name="sector">
  			<!-- Need a better way of showing the current selection -->
  			<option value="<%= @project.sector %>"><%= @project.sector %></option>
			<option value="Agriculture">Agriculture</option>
			<option value="Economic Development">Economic Development</option>
			<option value="Education">Education</option>
			<option value="Environment & Natural Resources">Environment & Natural Resources</option>
			<option value="Finance & Financial Reform">Finance & Financial Reform</option>
			<option value="Governance">Governance</option>
			<option value="Health">Health</option>
			<option value="Rural Development">Rural Development</option>
			<option value="Social Development">Social Development</option>
			<option value="Tourism">Tourism</option>
			<option value="Other">Other</option>
		</select>
  		<p>Organisation:</p>
  		<p>Country:</p>
		<input type="text" name="country" value="<%= @project.country %>"><br>
		<p>Project Summary:</p>
		<textarea rows="4" cols="50" name="summary"><%= @project.summary %></textarea>
		<p>Description:</p>
		<textarea rows="4" cols="50" name="description"><%= @project.description %></textarea>
		<input type="submit">
		<h2>Financial Details</h2>
		<p>Funding Goal:</p>
		<input type="text" name="funding_goal" value="<%= @project.funding_goal %>"><br>
		<p>Funding Date:</p>
		<input type="text" name="funding_date" value="<%= @project.funding_date %>"><br>
		<p>Status:</p>
  		<select name="status">
  			<!-- Need a better way of showing the current selection -->
  			<option value="<%= @project.status %>"><%= @project.status %></option>
			<option value="None">None</option>
			<option value="Featured">Featured</option>
			<option value="Staff Pick">Staff Pick</option>
		</select>
	</form>
  <p><a href="/<%= @project.project_id %>/delete">Delete</a></p>  
<% else %>  
  <p>Project not found.</p>  
<% end %>